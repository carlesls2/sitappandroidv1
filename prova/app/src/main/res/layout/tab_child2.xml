<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mapametrobarcelona201501fonsv1"
    >
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
    >
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="right"
            android:layout_margin="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp">
            <TextView
                android:id="@+id/gsmq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" GSM : "
                android:textSize="20dp"
                android:background="#55ffffff"
                android:textColor="#ffffff55"
            />
            <TextView
                android:id="@+id/gpsq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" GPS : "
                android:textSize="20dp"
                android:background="#55ffffff"
                android:textColor="#ffffff55"
                />
            <TextView
                android:id="@+id/stationq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" nearest station : "
                android:textSize="20dp"
                android:background="#55ffffff"
                android:textColor="#ffffff55"
                />
            <TextView
                android:id="@+id/distanceq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" distance : "
                android:textSize="20dp"
                android:background="#55ffffff"
                android:textColor="#ffffff55"
                />
            <TextView
                android:id="@+id/elevatorq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" elevator : "
                android:textSize="20dp"
                android:background="#55ffffff"
                android:textColor="#ffffff55"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="left|right"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_margin="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp">
            <TextView
                android:id="@+id/gsma"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" --- "
                android:textSize="20dp"
                android:background="#55ffff00"
                android:textColor="#ffffff55"
            />

            <TextView
                android:id="@+id/gpsa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" --- "
                android:textSize="20dp"
                android:background="#55ffff00"
                android:textColor="#ffffff55"
            />

            <TextView
                android:id="@+id/stationa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" --- "
                android:textSize="20dp"
                android:background="#55ffff00"
                android:textColor="#ffffff55"
                />
            <TextView
                android:id="@+id/distancea"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" --- "
                android:textSize="20dp"
                android:background="#55ffff00"
                android:textColor="#ffffff55"
                />
            <TextView
                android:id="@+id/elevatora"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" --- "
                android:textSize="20dp"
                android:background="#55ffff00"
                android:textColor="#ffffff55"
                />

        </LinearLayout>

    </LinearLayout>




</RelativeLayout>
